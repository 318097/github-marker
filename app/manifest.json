{
  "name": "Github Marker",
  "version": "2.0",
  "description": "Link marker for Github",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*",
        "*://gist.github.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "manifest_version": 2,
  "web_accessible_resources": [
    "assets/v2/heart.svg",
    "assets/v2/heart-hollow.svg",
    "assets/v2/bookmark.svg",
    "assets/v2/bookmark-hollow.svg",
    "assets/v2/check.svg",
    "assets/v2/check-hollow.svg"
  ],
  "icons": {
    "16": "icons/v2/icon16.png",
    "32": "icons/v2/icon32.png",
    "48": "icons/v2/icon48.png",
    "128": "icons/v2/icon128.png"
  }
}