{
  "name": "Github Marker",
  "version": "1.0",
  "description": "Link marker for Github",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://github.com/*", "*://gist.github.com/*"],
      "css": ["src/styles.css"],
      "js": ["src/content-script.js"]
    }
  ],
  "manifest_version": 2,
  "web_accessible_resources": ["src/assets/test.png"]
}
